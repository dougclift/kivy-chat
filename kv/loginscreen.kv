#: import utils kivy.utils
<LoginScreen>:
  FloatLayout:
    canvas.before:
      Color:
        rgb: app.theme_cls.primary_color
      Rectangle:
        size: self.size
        pos: self.pos
    Image:
      source: 'kivymd_logo.png'
      size_hint: 1, .3
      pos_hint: {'top': .9, 'right': 1}

    MDTextField:
      id: username
      hint_text: "Username"
      color_mode: 'custom'
      line_color_focus: self.theme_cls.opposite_bg_normal
      size_hint: .8, .1
      pos_hint: {'top': .55, 'right': .9}

    MDTextField:
      id: chatroom
      hint_text: "Chatroom Name"
      color_mode: 'custom'
      line_color_focus: self.theme_cls.opposite_bg_normal
      size_hint: .8, .1
      pos_hint: {'top': .45, 'right': .9}

    MDFlatButton:
      id: login_button
      text: "Start Chat"
      md_bg_color: app.theme_cls.primary_light
      size_hint: .8, .1
      pos_hint: {'top': .3, 'right': .9}
      on_release:
        app.login(username.text, chatroom.text)

